<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wishfairy"
    android:versionCode="1"
    android:versionName="1.0" 
  >
    

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.wishfairy.views.activities.HomePage"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.wishfairy.views.activities.Page"
            android:label="@string/title_activity_page"
             >
             <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.wishfairy.views.activities.HomePage" />
        </activity>
          <activity
            android:name="com.example.wishfairy.views.activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:name="com.example.wishfairy.views.activities.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
         android:name = "com.example.wishfairy.views.activities.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.example.wishfairy.HomePage"
            android:label="@string/title_activity_home_page" >
        </activity>
        <activity
         	android:name = "com.example.wishfairy.views.activities.ResetPassword"
            android:label="@string/title_activity_reset_password" >
        </activity>
    </application>

</manifest>
