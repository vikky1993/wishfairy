<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:paddingBottom="20sp"
        android:layout_marginRight="10sp"
        android:id="@+id/delete_item"
        android:background="@android:drawable/ic_menu_delete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <ImageView android:layout_width="fill_parent"
        android:layout_marginTop="10sp"
        android:layout_height="150dp"
        android:id="@+id/itemImage"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="#000"
                android:id="@+id/item_head"
                android:text="Head"
                />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="10sp"
            android:text="Category: "
            android:id="@+id/category_template"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/category_template"
            android:id="@+id/category"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            android:text="catogory"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="10sp"
            android:text="Added On:"
            android:id="@+id/date_template"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/date_template"
            android:id="@+id/date"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            android:text="06/06/2015"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_below="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20sp"
            android:layout_above="@+id/search"
            />
    <Button

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp"
        android:background="@drawable/submit_button"
        android:id="@+id/search"
        android:layout_alignParentBottom="true"
        android:text="Search In Google"/>
   </RelativeLayout>
</LinearLayout>
